{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "module": true,
    "define": true,
    "expect": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "camelcase": 2,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "max-params": [
      2,
      5
    ],
    "max-depth": [
      2,
      2
    ],
    "complexity": [
      2,
      8
    ],
    "max-len": [
      2,
      160,
      4
    ],
    "new-cap": 2,
    "semi": 2,
    "no-trailing-spaces": 2,
    "space-before-blocks": 2,
    "keyword-spacing": 2,
    "eol-last": 2,
    "no-console": 1,
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1,
        "maxEOF": 0
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "space-infix-ops": [
      "error"
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "block-spacing": [
      "error"
    ],
    "arrow-spacing": [
      "error"
    ],
    "react/jsx-indent": [
      2,
      2
    ],
    "react/jsx-no-undef": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-quotes": 0,
    "react/jsx-sort-prop-types": 0,
    "react/no-unknown-property": 2,
    "react/jsx-boolean-value": [
      1,
      "always"
    ],
    "react/jsx-uses-react": 1,
    "react/no-did-update-set-state": 1,
    "react/no-multi-comp": 1,
    "react/react-in-jsx-scope": 1,
    "react/self-closing-comp": 1,
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "^[~]"
        ]
      }
    ],
    "react/jsx-curly-spacing": [
      2,
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ]
  }
}
